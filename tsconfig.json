{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "./lib",
		"moduleResolution": "node",
		"baseUrl": "./packages"
	},
	"include": ["packages/**/*"],
	"exclude": ["node_modules"]
}
